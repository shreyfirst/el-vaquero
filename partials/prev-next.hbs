<div class="prev-next-wrap">
    <div class="row">
        {{#prev_post}}
        <div class="col-lg-5 offset-md-1 post-wrap">
            {{#if feature_image}}
            <a href="{{url}}">
                <div class="featured-image-wrap">
                    <div class="featured-image"style="background-image:url({{feature_image}});"></div>
                </div>
            </a>
            {{/if}}
            <div class="content-wrap{{^if feature_image}} no-image{{/if}}">
                <a href="{{url}}" class="nav-text">{{t "Previous post"}}</a>
                <h2 class="title h4"><a href="{{url}}">{{title}}</a></h2>
                <time class="date" datetime="{{date format="YYYY-MM-DD"}}" title="{{date format="DD MMMM, YYYY"}}">{{date format="MMMM DD, YYYY"}}</time>
            </div>
        </div>
        {{/prev_post}}
        {{#next_post}}
        <div class="col-lg-5 post-wrap">
            {{#if feature_image}}
            <a href="{{url}}">
                <div class="featured-image-wrap">
                    <div class="featured-image"style="background-image:url({{feature_image}});"></div>
                </div>
            </a>
            {{/if}}
            <div class="content-wrap{{^if feature_image}} no-image{{/if}}">
                <a href="{{url}}" class="nav-text">{{t "Next post"}}</a>
                <h2 class="title h4"><a href="{{url}}">{{title}}</a></h2>
                <time class="date" datetime="{{date format="YYYY-MM-DD"}}" title="{{date format="DD MMMM, YYYY"}}">{{date format="MMMM DD, YYYY"}}</time>
            </div>
        </div>
        {{/next_post}}
    </div>
</div>