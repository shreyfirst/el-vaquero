<div class="main-content-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="error-wrap text-center">
                    <h1 class="error-code">{{statusCode}}</h1>
                    <h2 class="error-message h2">{{message}}</h2>
                    <p class="message-manual">{{t "Woah there Vaquero! Looks like you've wandered somewhere that doesn't exist!"}}</p>
                    <a href="{{@site.url}}" class="btn btn-primary back-btn">{{t "Head back to the office"}} {{> icons/arrow-right}}</a>
                </div>
                
            </div>
        </div>
    </div>
</div>
